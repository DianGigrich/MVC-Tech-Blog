{{#each users as |user| }}
<div class=" card row align-center mb-5">
  <div class="col-md-6">
    <h2 class="card-title">{{post.title}}</h2>
    <nav card="card-subtitle">created by {{username}} at {{post.createdAt}}</nav>
  </div>
  <p class="card-body">
    {{post.post}}
  </p>
  <div class="card">
    <p class="card-text">{{comment.comment}} </p>
        <p class="card-subtitle">by {{comment.UserId}} at {{comment.createdAt}}</p>
  </div>
  <button type="button" class="btn btn-primary commentForm" data-bs-toggle="modal" data-bs-target="{{post.id}}">
  Leave a Comment
</button>
  <div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body mb-3">
  <label for="exampleFormControlTextarea1" class="form-label" placeholder="comment"></label>
  <textarea class="form-control" id="enteredComment" rows="3"></textarea>
</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
</div>
{{/each}}