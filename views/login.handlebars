<h2>Login</h2>

<form class="form login-form" id="loginForm">
  <div class="form-group mb-3">
    <label class="form-label" for="username-login">username:</label>
    <input class="form-control" type="text" id="loginUsername" />
  </div>
  <div class="form-group mb-3">
    <label class="form-label" for="password-login">password:</label>
    <input class="form-control" type="password" id="loginPassword" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">login</button>
  </div>
</form>

<script src="/js/login.js"></script>
