<div class=" card row align-center mb-5">
  <div class="col-md-6">
    <h2 class="card-title bg-info">{{title}}</h2>
    <p card="card-subtitle justify-content-right">Created by {{User.username}} at {{format_date createdAt}}</p>
  </div>
  <p class="card-body">
    {{post}}
  </p>
  {{#each Comments }}
  <div class="card">
    <p class="card-subtitle">Comment left at {{format_date createdAt}} </p>
    <p class="card-text">{{comment}} </p>
  </div>
  {{/each}}

  <form class="Form" id="commentForm" data-id="{{id}}">
    <h5 class="modal-title">Leave a comment?</h5>
    <div class="modal-body mb-3">
      <label for="newcomment" class="form-label" placeholder="comment"></label>
      <textarea class="form-control" id="enteredComment" rows="3" placeholder="..."></textarea>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>

  </form>

  <script src="/js/createcomment.js"></script>